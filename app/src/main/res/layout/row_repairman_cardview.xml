<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_margin="3dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp" >

    <LinearLayout
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            app:cardCornerRadius="15dp"
             >

            <ImageView

                android:id="@+id/images"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ma2" />
        </androidx.cardview.widget.CardView>

        <ImageView

            android:layout_weight="1"
            android:paddingRight="30sp"
            android:layout_margin="3dp"
            android:scaleX="-1"
            android:id="@+id/ratingImage"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:srcCompat="@drawable/rating3" />


        <TextView
            android:autoSizeMinTextSize="13sp"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:id="@+id/remarman_nameTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="محمد أحمد" />

        <TextView
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:layout_margin="3dp"

            android:id="@+id/remarman_jobTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="فني موبايل" />



        <LinearLayout
            android:layout_weight="1"

            android:layout_margin="3dp"
            android:gravity="right|center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:autoSizeTextType="uniform"

                android:id="@+id/remarman_locationTv"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 كلم" />

            <ImageView
                android:layout_weight="0"
                android:id="@+id/imageView5"
                android:layout_width="16sp"
                android:layout_height="16sp"
                app:srcCompat="@drawable/location"
                android:tint="@android:color/black"/>

        </LinearLayout>


    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>